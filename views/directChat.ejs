<body>
    <!-- HTML Layout -->
    <!-- top navbar -->
    <!-- body of the page -->
    <div class="mainDiv">
        <div id="topNavPlaceHolder"></div>
        <div id="talkjs-container">
            <i class="talk-js-loader">Loading chat...</i>
        </div>
        <div id="bottomNavPlaceHolder"></div>
        <div>
        </div>

        <script>
            // Working example from SDK documentation, link: https://talkjs.com/docs/sdk/javascript/getting-started/
            (function (t, a, l, k, j, s) {
                s = a.createElement('script');
                s.async = 1;
                s.src = "https://cdn.talkjs.com/talk.js";
                a.head.appendChild(s);
                k = t.Promise;
                t.Talk = {
                    v: 3,
                    ready: {
                        then: function (f) {
                            if (k) return new k(function (r, e) {
                                l.push([f, r, e])
                            });
                            l
                                .push([f])
                        },
                        catch: function () {
                            return k && new k()
                        },
                        c: l
                    }
                };
            })(window, document, []);

            Talk.ready.then(function () {
                var other = new Talk.User({
                    id: '<%= receiverId %>',
                    name: '<%= receiverName %>',
                    email: '<%= receiverEmail %>',
                    photoUrl: '<%= receiverImage %>',
                });
                var me = new Talk.User({
                    id: '<%= senderId %>',
                    name: '<%= senderName %>',
                    email: '<%= senderEmail %>',
                    photoUrl: '<%= senderImage %>',
                });
                window.talkSession = new Talk.Session({
                    appId: 'teJYdfcK',
                    me: me,
                });

                var conversation = talkSession.getOrCreateConversation(
                    Talk.oneOnOneId(me, other)
                );
                conversation.setAttributes({
                    subject: '<%= title %>',
                });
                conversation.setParticipant(me);
                conversation.setParticipant(other);

                var inbox = talkSession.createInbox({
                    selected: conversation
                });

                inbox.mount(document.getElementById('talkjs-container'));
            });
        </script>

